<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.github.miwu.ui.edit.EditFavoriteActivity" />

        <variable
            name="viewModel"
            type="com.github.miwu.ui.edit.EditFavoriteViewModel" />
    </data>


    <FrameLayout style="@style/Wear.Frame">

        <LinearLayout
            style="@style/FragmentEmptyPage"
            app:state="@{viewModel.deviceState}">

            <ImageView style="@style/FragmentEmptyPage.Icon" />

            <TextView
                style="@style/FragmentEmptyPage.Title"
                android:text="@string/miwu_no_device" />

            <TextView
                style="@style/FragmentEmptyPage.SubTitle"
                android:text="@string/miwu_no_device" />
        </LinearLayout>

        <com.github.miwu.view.SmoothRecyclerView
            android:id="@+id/recycler"
            style="@style/Wear.Recycler"
            app:item="@{viewModel.devices}"
            app:itemEventHandler="@{viewModel.metadataHandler}"
            app:itemLayout="@{@layout/item_miwu_device}"
            app:itemTouchHelper="@{activity.itemTouchHelper}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:reverse="@{true}"
            app:state="@{viewModel.deviceState}"
            app:viewModel="@{viewModel}">

            <requestFocus />
        </com.github.miwu.view.SmoothRecyclerView>

        <com.github.miwu.view.AppTitleBar
            android:id="@+id/title"
            style="@style/Wear.TitleBar"
            app:title="@string/edit_favorite" />
    </FrameLayout>

</layout>