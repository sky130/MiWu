<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.github.miwu.ui.device.DeviceActivity" />
    </data>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <requestFocus />

        <LinearLayout style="@style/WearLayout">

            <LinearLayout
                android:id="@+id/miot_widget_layout"
                style="@style/MiotLayout">

                <LinearLayout
                    android:id="@+id/header"
                    style="@style/MiotLayout"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/sub_header"
                    style="@style/MiotLayout"
                    android:visibility="gone" />

                <com.github.miwu.view.RecyclerGridLayout
                    android:id="@+id/body"
                    style="@style/MiotLayout"
                    android:clipToPadding="false"
                    android:layout_marginBottom="@dimen/device_miwu_layout_margin_bottom"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/sub_footer"
                    style="@style/MiotLayout"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/footer"
                    style="@style/MiotLayout"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/unknown"
                    style="@style/MiotLayout"
                    android:visibility="gone" />
            </LinearLayout>

            <com.github.miwu.view.AppButton
                style="@style/WearAppButton"
                android:onClick="@{()->activity.onAddButtonClick()}"
                android:text="添加到卡片" />

            <com.github.miwu.view.AppButton
                style="@style/WearAppButton"
                android:onClick="@{()->activity.onStarButtonClick()}"
                android:text="收藏设备" />
        </LinearLayout>
    </ScrollView>
</layout>