<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiHome" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
        <item name="android:windowSwipeToDismiss">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="colorPrimary">@color/mi_green</item>
        <item name="colorAccent">@color/mi_green</item>
    </style>

    <style name="Theme.MiHome" parent="Base.Theme.MiHome" />

    <style name="Theme.MiHome.Splash" parent="Theme.MiHome">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor" tools:ignore="PrivateResource">@color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
    </style>

    <style name="Wear" />

    <style name="Miwu" />

    <style name="Wear.TitleBar.Text" parent="android:Widget.TextView">
        <item name="android:text">标题栏</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">0.5dp</item>
        <item name="android:paddingBottom">0.5dp</item>
    </style>

    <style name="Wear.TitleBar.Clock">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:format12Hour">h:mm</item>
        <item name="android:format24Hour">HH:mm</item>
    </style>

    <style name="Wear.Frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wear.Scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Wear.Recycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingLeft">@dimen/device_activity_padding</item>
        <item name="android:paddingRight">@dimen/device_activity_padding</item>
        <item name="android:paddingTop">@dimen/activity_padding_top</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Wear.Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/device_activity_padding</item>
        <item name="android:paddingRight">@dimen/device_activity_padding</item>
        <item name="android:paddingTop">@dimen/activity_padding_top</item>
        <item name="android:paddingBottom">50dp</item>
    </style>

    <style name="Wear.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@drawable/bg_list_item</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Wear.AppButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Wear.DescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="Wear.DescSubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="Wear.TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MiotLayout">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Miwu.EditView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:padding">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:useLocalePreferredLineHeightForMinimum" tools:targetApi="35">false
        </item>
    </style>

    <style name="FragmentEmptyPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FragmentEmptyPage.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="FragmentEmptyPage.SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FragmentEmptyPage.Icon">
        <item name="android:src">@drawable/empty_list_icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="DeviceCard" />

    <style name="DeviceCard.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@drawable/bg_list_item</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DeviceCard.Icon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="DeviceCard.Title">
        <item name="android:textColor">@drawable/list_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DeviceCard.Room">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DeviceCard.Offline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/device_offline</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>